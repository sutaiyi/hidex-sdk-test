{
	"name": "hidex-sdk",
	"version": "1.2.13",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"scripts": {
		"build": "npm run clean && tsc && shx cp -r ./lib/ ./example/src/hidex-sdk/ && npm run package",
		"build:win": "npm run clean && tsc && robocopy ./lib/ ./example/src/hidex-sdk/ /MIR",
		"build:prod": "npm run build && npm publish",
		"test": "jest",
		"clean": "npx rimraf ./example/src/hidex-sdk/ && npx rimraf ./lib",
		"package": "shx cp -r ./package.json ./lib/ && shx cp -r ./package.json ./example/src/hidex-sdk/"
	},
	"dependencies": {
		"@codex-data/sdk": "^1.0.3",
		"@project-serum/anchor": "^0.26.0",
		"@react-native-async-storage/async-storage": "^2.1.2",
		"@solana/spl-token": "^0.4.8",
		"@solana/web3.js": "1.95.8",
		"axios": "^1.8.1",
		"bignumber.js": "^9.2.0",
		"bip39": "^3.1.0",
		"browser-passworder": "^2.0.3",
		"bs58": "5.0.0",
		"buffer": "^6.0.3",
		"crypto-js": "^4.2.0",
		"ed25519-hd-key": "^1.3.0",
		"ethers": "5.7.2",
		"shx": "^0.3.4",
		"terser-webpack-plugin": "^5.3.11",
		"tweetnacl": "^1.0.3"
	},
	"devDependencies": {
		"@types/crypto-js": "^4.2.2",
		"@types/jest": "^28.1.6",
		"add": "^2.0.6",
		"clean-webpack-plugin": "^4.0.0",
		"jest": "^28.1.3",
		"ts-jest": "^28.0.7",
		"ts-loader": "^9.5.2",
		"typescript": "^5.8.2",
		"webpack": "^5.98.0",
		"webpack-cli": "^6.0.1",
		"yarn": "^1.22.22"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"testMatch": [
			"**/test/**/*.test.ts"
		]
	},
	"files": [
		"/lib",
		"index.js",
		"README.md"
	],
	"author": "Hidex Ty",
	"license": "CC BY-ND"
}
